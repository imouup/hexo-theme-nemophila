#article-toc {
    display: none;    
}

@media (min-width: 1500px) {
    #article-toc {
        display: block;
        width: 240px;

        position: sticky;
        position: -webkit-sticky;
        top: 100px;

        max-height: 80vh;
        overflow-y: auto;
        z-index: 90;

        font-family: 'Noto Serif SC', sans-serif;
        font-size: 14px;
        line-height: 1.6;
        color: var(--text);

        ol {
            list-style: none;
            margin: 0;
            padding: 0;

        }

        .toc-item {
            position: relative;
            margin: 4px 0;    
        }
        .toc-link {
            display: block;
            color: var(--text);
            text-decoration: none;
            padding: 4px 8px;
            border-left: 3px solid transparent;
            transition: all 0.2s ease-in-out;

            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;    

            &:hover {
                color: var(--base);    
            }
        }
    
    
    }
}