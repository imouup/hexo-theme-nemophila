#up {
    position: fixed;
    bottom: 72px;     
    right: 32px;     
    z-index: 999;

    width:128px;

    cursor: pointer;
    opacity:0;
    visibility: hidden;
    transform: translateY(20px);

    transition: all 0.3s ease-in-out;
    
    img {
        width: 100%;
        height: auto;
        object-fit: contain;
        display: block;
        filter: drop-shadow(0px 4px 2px rgba(205, 216, 232, 0.6));

    }

    &.show {
        opacity:1;
        visibility: visible;
        transform: translateY(0);
    }

    &:hover {
        transform: translateY(-5px) scale(1.1);
    }
    
    }