.music-container {
    position: relative;
    width: 100%;
    min-height: 100vh;
    overflow: hidden;
    color: var(--white);
    z-index: 1;

}

.music-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition: all 0.3s ease-in-out;

    background-image: var(--music-bg-img);
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;

    filter: blur(80px) brightness(var(--bg-brightness)) saturate(120%);
    transform: scale(1.1);
    z-index: -1;      
}

.music-container::after {
    opacity: var(--dark_mask_opacity);
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -2
    transition: all 0.3s;

    background: rgba(47, 62, 75, 0.5);
}

#music-page .aplayer {
    position: relative;
    left: auto;
    right: auto;
    margin: 15vh auto 0 auto;
    width: 1200px;
    transform: none;
    z-index: 10;
    color: var(--text);
    background: transparent;
    box-shadow: none;
    overflow: visible;

    .aplayer-body {
        margin: 0 auto;
        width: 1200px;
        display: flex;
        flex-direction: column;

            
    }

    .aplayer-pic {
        width: 360px;
        height: 360px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        box-shadow: 0px 4px 29.8px 3px rgba(54, 54, 54, 0.45);
        border-radius: 15px;

    }

    .aplayer-info {
        margin: 8px 0;
        padding: 0;
        position: relative;
        height: fit-content; 
        border: none;  
    }

    

    .aplayer-lrc {
        width: 100%;
        height: 100vh;
        position: absolute;
        overflow: visible;
        top: calc(-15vh - 444px);
        left: 480px;
        overflow-y: auto !important;
        scroll-behavior: smooth !important;

        &::-webkit-scrollbar {  //隐藏滚动条
            width: 0 !important;
            display: none !important;
        }
        

        &::before {
            display: none;    
        }

        &::after {
            display: none;    
        }

        .aplayer-lrc-current {
            font-family: 'Noto Sans SC', sans-serif;
            font-size: 48px;
            font-weight: 700;
            color: var(--white);
            line-height: 1.5 !important;
            margin: 4px;
            height: fit-content !important;
            transition: all 0.6s ;
        }
        p {
            font-family: 'Noto Sans SC', sans-serif;
            font-size: 32px;
            font-weight: 700;
            color: var(--white);
            line-height: 2.5 !important;
            margin: 4px;
            height: fit-content !important;
            transition: all 0.6s ;
            white-space: nowrap;
            overflow: visible;

        }

        

    }

    .aplayer-music {
            margin: 4px 8px;
            height: fit-content;

        }
    .aplayer-music {
        font-family: 'Noto Sans SC', sans-serif;
        font-size: 24px;
        font-weight: 500;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;

    }
    .aplayer-title {
        font-family: 'Noto Sans SC', sans-serif;
        font-size: 24px;
        font-weight: 700;
        color: var(--white);
    }
    .aplayer-author {
        font-family: 'Noto Sans SC', sans-serif;
        font-size: 16px;
        font-weight: 400;
        color: var(--white);
        opacity:0.75;
        margin-left: 8px;
        text-indent: -1.6ch;
    }

    .aplayer-controller {
        margin: 0;
        width: 360px;
        display: flex;
        flex-direction: column;
        gap: 8px;

    }

    .aplayer-bar, .aplayer-loaded, .aplayer-played{
        height: 8px;
        border-radius: 4px;
    }

    .aplayer-bar {
        background: rgba(196, 196, 196, 0.15) !important;
    }

    .aplayer-played {
        background: var(--windy) !important;
    }

    .aplayer-loaded {
        background: rgba(141, 144, 148, 0.25) !important;    
    }

    .aplayer-thumb {
        margin-top: -1px
        display: none;    
    }

    .aplayer-bar-wrap {
        width: 100% !important; 
        padding: 7px 0;   
    }

    .aplayer-list {
        width: 480px;
        margin: 0px 0 0 8px;
        padding: 32px 56px;
        overflow-y: auto;
        box-sizing: border-box;
        transform: translateX(-64px);
        &::-webkit-scrollbar {  //隐藏滚动条
            width: 0 !important;
            display: none !important;
        }
        
        ol {
            overflow: visible;
        }

        li {
            height: 32px;
            border-radius: 5px;
            border: none;
            margin: 8px;

            .aplayer-list-title, .aplayer-list-author {
                color: var(--windy);
                transition: all 0.2s;
                
               
            }
             &:hover {
                background-color: rgba(255,255,255,0.75) 

                .aplayer-list-title, .aplayer-list-author {
                    color: var(--text);
                }
    
            }
            
        }

        .aplayer-icon .aplayer-icon-menu {
            display: none;    
        }


        .aplayer-list-index {
            display: none;    
        }
        .aplayer-list-title {
                font-family: 'Noto Sans SC', sans-serif;
                font-size: 14px;   
            }

        .aplayer-list-light {
            background: rgba(255, 255, 255, 0.5);
            color: var(--text);
            box-shadow: 0px 4px 29.8px 3px rgba(54, 54, 54, 0.45);
            
            .aplayer-list-title, .aplayer-list-author {
                color: var(--text);
                
            }

            
            
        }
        .aplayer-list-cur {
             background: var(--windy) !important;
             display: none;
        }
       
    }

    .aplayer-notice {
        display: none;    
    }

    .aplayer-time {
        width: 400px;
        .aplayer-time-inner {
            font-family: 'Noto Sans Serif', serif;
            font-size: 14px;
            color: var(--white);
            opacity: 0.75;   
            margin: 0 195px 0 0; 
        }

        .aplayer-icon {  
            width: 20px;
            height: 20px; 
        }
        .aplayer-icon svg path {
            fill: var(--white);
            opacity: 0.75; 
        }
        .aplayer-icon.aplayer-icon-menu {
            display: none !important;    
        }

    }
    .aplayer-volume {
        background: var(--windy) !important;    
    }
    .aplayer-volume-bar {
        background: rgba(141, 144, 148, 0.6) !important;
        height: 40px;     
    }
    

    
}


