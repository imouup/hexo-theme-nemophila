#cannot-get-page-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 56px auto;
    width: 80%;
    font-family: 'Noto Serif SC', serif;

    h1 {
        font-size: 64px;
        color: var(--base);
        font-family: 'Noto Sans SC', sans-serif;
    }
    
    a {

        margin-top: 16px;
        color: var(--text3);
        font-size: 16px;
        text-decoration: none;

        &:hover {
           text-decoration: underline;
           color: var(--base);
        }
    }

    strong {
        color: var(--base);
        
    }

}