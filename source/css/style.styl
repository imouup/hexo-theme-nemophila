html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
}

// lazyload
img.lazyload {
    object-fit: contain;
    transition: all 0.5s ease-in-out;
    opacity: 0.5;
    filter: blur(1px);
}

img.lazyload.loaded {
    object-fit: cover;
    opacity: 1;
    filter: none;
}