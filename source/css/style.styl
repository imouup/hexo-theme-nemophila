@import "_partial/nav.styl"
@import "_partial/post.styl"
@import "index.styl"

:root{
  --base: #6C9AE4;
  --secondary: #C7D0F5;
  --text: #14171F;
  --highlight: #FCF5B0;
  --windy: #F0FAFF;
  --bg: #CDD8E8;
  --white: #FFFFFF;
 
  --title: 32px;
  --h1: 36px;
  --h2: 24px;
  --h3: 16px;
  --tx: 16px;
}

// Regular / Normal = 400
// Medium = 500
// Bold = 700

// Fonts
@font-face
  font-family: 'Cormorant Garamond'
  src: url('fonts/CormorantGaramond-BoldItalic.ttf') format('truetype')
  font-weight:  700
  font-style: italic

@font-face
  font-family: 'Abril Fatface'
  src: url('fonts/AbrilFatface-Regular.ttf') format('truetype')
  font-weight: 400
  font-style: normal

@font-face
  font-family: 'Noto Serif SC'
  src: url('fonts/NotoSerifSC-Bold.ttf') format('truetype')
  font-weight: 700
  font-style: normal

@font-face
  font-family: 'Noto Serif SC'
  src: url('fonts/NotoSerifSC-Regular.ttf') format('truetype')
  font-weight: 400
  font-style: normal

@font-face
  font-family: 'Noto Serif SC'
  src: url('fonts/NotoSerifSC-Medium.ttf') format('truetype')
  font-weight: 500
  font-style: normal
